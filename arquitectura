│   │   │   ├── dashboard/        ← Ejemplo de otro módulo (usuarios, citas, etc.)
│   │   │   │   └── dashboard.component.ts/html/css
│   │   ├── app-routing.module.ts
│   │   ├── app.module.ts
│   │   └── main.ts
├── angular.json
└── ...
